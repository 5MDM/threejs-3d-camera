{
  "name": "threejs-3d-camera",
  "version": "2.0.1",
  "description": "A package that gives you a way to make a Three.js perspective camera that supports touch and pointer controls along with movement as well. WARNING: This is still in development",
  "author": "5mdm",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/module.d.ts",
  "browser": "./dist/browser.js",
  "module": "./dist/index.js",
  "peerDependencies": {
    "three": "^0.157.0"
  },
  "keywords": [
    "threejs",
    "camera"
  ],
  "scripts": {
    "build": "node --no-warnings esbuild.mjs",
    "build:dev": "node --no-warnings esbuild.mjs --no-dts",
    "buildDocs": "typedoc"
  },
  "files": [
    "package.json",
    "LICENSE",
    "README.md",
    "./dist/**"
  ],
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/three": "^0.158.3",
    "esbuild": "^0.19.7",
    "typedoc": "^0.25.3",
    "typescript": "^5.2.2"
  }
}
